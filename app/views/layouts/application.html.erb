<!DOCTYPE html>
<html>
<head>
    <title>Progmr</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <script type="text/javascript" src="http://fast.fonts.com/jsapi/14ad7663-f050-4800-a989-2e51a08b9fa5.js?2"></script>
    <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
    <div class="row">
        <div class="span12">
        <div class="topBar">
            &nbsp;
        </div>
        </div>
    </div>

    <div class="row header">
        <div class="span5">
            <h1>{ <%= link_to (t :siteName), root_path %> }</h1>
        </div>
        <div class="span7 actions">
            <% if current_user %>
                <div>
                <span><%= current_user.username %> |&nbsp;</span>
                <span> <%= image_tag "user_karma.png" %><%= current_user.posts_karma + current_user.comments_karma %> |&nbsp;</span>
                <span> <%= link_to (t :newPost), new_post_path %> |&nbsp;</span>
                <span> <%= link_to (t :logout), logout_path %></span>
                </div>
            <% else %>
                <%= link_to (t :signup), signup_path %> |
                <%= link_to (t :login), login_path %>
            <% end %>
        </div>
    </div>

    <% if flash[:notice] %>
    <div class="row alert-box notice">
        <div class="span12">
            <div class="fade in">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h3>
                    <%= flash[:notice] %>
                </h3>
            </div>
        </div>
    </div>
    <script>
    setTimeout(function() { $(".notice").hide(); }, 2500);
    </script>
    <% end %>

    <% if flash[:warning] %>
        <div class="row alert-box warning">
            <div class="span12">
                <div class="fade in">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h3>
                        <%= flash[:warning] %>
                    </h3>
                </div>
            </div>
        </div>
    <% end %>

    <div class="row">
        <div class="span9">
        <div class="content">
            <%= yield %>
        </div>
        </div>
        <div class="span3">
        <div class="side">
            <%= render 'layouts/right_side' %>
        </div>
        </div>
    </div>
</div>
</body>
</html>
